generate *ARGS:
    uv run python main.py generate run {{ARGS}}

evaluate *ARGS:
    uv run python main.py evaluate run {{ARGS}}

sync:
    uv sync

format:
    uv run ruff format

lint:
    uv run ruff check


up:
    docker compose up -d

down:
    docker compose down --volumes --remove-orphans

annotate *ARGS:
    uv run python main.py annotate {{ARGS}}

preprocess *ARGS:
    uv run python main.py preprocess {{ARGS}}

deduplicate *ARGS:
    uv run python main.py deduplicate run {{ARGS}}

test *ARGS:
    # Run tests with pytest
    # Usage:
    #   just test                    # Run all tests
    #   just test test_main.py       # Run specific test file
    #   just test -k "test_name"     # Run specific test function
    #   just test --cov              # Run with coverage
    #   just test -v                 # Run with verbosity
    export PYTHONPATH="$(pwd)" && uv run pytest {{ARGS}}